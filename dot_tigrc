set refresh-mode = auto

bind main J @git commit --fixup %(commit)
bind main L !git rebase -i %(commit)
bind main U ?git commit --amend --no-edit
bind main P !git pull

bind status A ?git commit --amend --no-edit
bind status D ?rm %(file)
bind status U >!tig -- %(file)
bind status T >!git add -N %(file)

bind refs B +git checkout -b "%(prompt git checkout -b )"
bind refs F @git fetch --prune
bind refs P !git pull
bind refs C @git checkout %(branch)
bind refs L !git rebase -i %(branch)
